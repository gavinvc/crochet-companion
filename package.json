{
  "name": "crochet-companion",
  "version": "1.0.0",
  "description": "Full-stack Crochet Companion app built with MongoDB, Express, Angular, and Node",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "npm run build:client",
    "dev": "concurrently \"npm run dev:ollama\" \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:llm\"",
    "dev:server": "nodemon server.js",
    "dev:client": "npm --prefix frontend/client run start",
    "dev:ollama": "OLLAMA_HOST=127.0.0.1 ollama serve",
    "dev:llm": "nodemon scripts/llm-gateway.js",
    "build:client": "npm --prefix frontend/client run build",
    "client:install": "npm --prefix frontend/client install",
    "test": "echo \"No backend tests configured\" && exit 0",
    "client:test": "npm --prefix frontend/client run test",
    "postinstall": "npm run client:install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.1",
    "morgan": "^1.10.1",
    "pdf-parse": "^1.1.1",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.3"
  }
}
